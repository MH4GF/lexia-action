{
  "name": "@lexia/action",
  "description": "GitHub Actions TypeScript template",
  "version": "0.0.0",
  "packageManager": "pnpm@10.4.1",
  "author": "",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/actions/typescript-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "bugs": {
    "url": "https://github.com/actions/typescript-action/issues"
  },
  "keywords": ["actions"],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm run package",
    "ci-test": "vitest run",
    "coverage": "pnpm make-coverage-badge --output-path ./badges/coverage.svg",
    "lint": "pnpm run lint:biome",
    "lint:biome": "biome check .",
    "local-action": "pnpm @github/local-action . src/main.ts .env",
    "package": "pnpm rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "pnpm run package -- --watch",
    "test": "vitest",
    "all": "pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@github/local-action": "^2.6.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.13.8",
    "@vitest/coverage-v8": "^3.0.7",
    "make-coverage-badge": "^1.2.0",
    "rollup": "^4.34.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
